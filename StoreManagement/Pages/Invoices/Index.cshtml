@page
@model StoreManagement.Pages.Invoices.IndexModel

<div class="border p-3 mt-4">
    <div class="pt-2 pb-4">
        <h2 class="text-primary">Hóa Đơn Nhập Hàng</h2>
        <hr />
    </div>
    <div class="submit-form pt-2 pb-4 border">
        <form method="post">
            <div class="mb-3">
                <label class="form-label mx-3" for="Name" style="width:100px;">Ngày tạo: </label>
                <input class="" type="date" name="str_MinCreatationDate" style="width:150px;"> -
                <input class="" type="date" name="str_MaxCreatationDate" style="width:150px;">
                <button class="btn btn-primary mx-4" type="submit"><i class="bi bi-funnel-fill"></i></i> Tìm kiếm</button>                
            </div>
        </form>
    </div>
    <div class="pt-2 pb-4">
        <table class="table table-bordered table-striped" width="100%">
            <tr>
                <th>Mã hóa đơn nhập hàng</th>
                <th>Ngày giờ tạo</th>
                <th>Chi tiết hóa đơn</th>
            </tr>

            @foreach (var invoice in Model.Invoices)
            {
                <tr>
                    <td>@invoice.ID</td>
                    <td>@invoice.CreationDateTime.ToString()</td>
                    <td>
                        <a asp-page="DetailInvoice" asp-route-id="@invoice.ID" class="btn btn-primary mx-2">
                            <i class="bi bi-list-columns-reverse"></i>
                        </a>
                    </td>
                    <td style="width:140px;">
                        <a asp-page="EditInvoice" asp-route-id="@invoice.ID" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-page="DeleteInvoice" asp-route-id="@invoice.ID" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="d-flex flex-row-reverse">
        <a asp-page="AddInvoice" asp-route-id="@Model.nextID" class="btn btn-primary"><i class="bi bi-plus-square"></i> Thêm loại hàng mới</a>
    </div>
</div>